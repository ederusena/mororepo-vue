{
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "scripts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@ederusena/styles": [
        "styles/src"
      ],
      "@ederusena/core": [
        "core/src"
      ],
      "@ederusena/react": [
        "react-dsx/src"
      ],
      "@ederusena/vue": [
        "vue-dsx/src"
      ]
    }
  }
}
